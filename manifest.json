{
  "manifest_version": 2,
  "name": "FB Holopost",
  "version": "1.0.0",
  "author": "Nikolay Holodenko",
  "description": "AI-powered content risk analyzer for Facebook. Protect your voice.",
  "icons": {
    "128": "icon.png"
  },
  "permissions": [
    "contextMenus",
    "storage",
    "activeTab",
    "https://generativelanguage.googleapis.com/*",
    "https://raw.githubusercontent.com/nikolay-holodenko/FB-Holopost/main/*"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "holopost@nikolay-holodenko",
      "update_url": "https://raw.githubusercontent.com/nikolay-holodenko/FB-Holopost/main/updates.json"
    }
  }
}